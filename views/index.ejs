
	<% include top %>

    <div class="container"><div class="jumbotron main">

    <% if (locals.error) { %>
    <p class="errortext"><%= error %></p>
    <% } %>
    <% if (locals.info) { %>
    <p><%= info %></p>
    <% } %>

    <h3>Login</h3>
    <form action="login" method="post">
        <div class="form-group">
            <label for="loginName">Name</label>
            <input class="form-control" id="loginName" type="text" name="name" placeholder="Name"/>
        </div>
        <div class="form-group">
            <label for="loginPass">Password</label>
            <input class="form-control" id="loginPass" type="password" name="password" placeholder="Password"/>
        </div>
        <button type="submit" class="btn btn-success">Go</button>
    </form>

    <h3 style="margin-top: 50px;">Register</h3>
    <form action="reg" method="post">
        <div class="form-group">
            <label for="regName">Name</label>
            <input class="form-control" id="regName" type="text" name="name" placeholder="Name"/>
        </div>
        <div class="form-group">
            <label for="regPass">Password</label>
            <input class="form-control" id="regPass" type="password" name="password" placeholder="Password"/>
        </div>
        <button type="submit" class="btn btn-success">Go</button>
    </form>


    </div></div> <!-- /container -->

	<% include bottom %>

